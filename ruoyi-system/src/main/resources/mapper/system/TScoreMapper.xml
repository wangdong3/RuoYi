<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TScoreMapper">
    
    <resultMap type="TScore" id="TScoreResult">
        <result property="scoreId"    column="score_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="examId"    column="exam_id"    />
        <result property="examName"    column="exam_name"    />
        <result property="score"    column="score"    />
        <result property="schoolYear"    column="school_year"    />
        <result property="semester"    column="semester"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTScoreVo">
        select score_id, user_id, user_name, exam_id, exam_name, score, school_year, semester, create_by, create_time, update_by, update_time, remark from t_score
    </sql>

    <select id="selectTScoreList" parameterType="TScore" resultMap="TScoreResult">
        <include refid="selectTScoreVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="examId != null "> and exam_id = #{examId}</if>
            <if test="examName != null  and examName != ''"> and exam_name like concat('%', #{examName}, '%')</if>
            <if test="score != null  and score != ''"> and score = #{score}</if>
            <if test="schoolYear != null  and schoolYear != ''"> and school_year = #{schoolYear}</if>
            <if test="semester != null  and semester != ''"> and semester = #{semester}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by = #{updateBy}</if>
            <if test="updateTime != null "> and update_time = #{updateTime}</if>
            <if test="remark != null  and remark != ''"> and remark like concat('%', #{remark}, '%')</if>
        </where>
    </select>
    
    <select id="selectTScoreById" parameterType="Long" resultMap="TScoreResult">
        <include refid="selectTScoreVo"/>
        where score_id = #{scoreId}
    </select>
    <select id="listResponsibleStudents" resultType="com.ruoyi.system.domain.TScore">
        SELECT sc.* from t_score sc LEFT JOIN t_exam_teacher et
        ON sc.exam_id = et.exam_id
        <where>
            et.user_id = ${currentUsetId}
            <if test="userId != null "> and sc.user_id = #{userId}</if>
            <if test="userName != null  and userName != ''"> and sc.user_name like concat('%', #{userName}, '%')</if>
            <if test="examId != null "> and sc.exam_id = #{examId}</if>
            <if test="examName != null  and examName != ''"> and sc.exam_name like concat('%', #{examName}, '%')</if>
            <if test="score != null  and score != ''"> and sc.score = #{score}</if>
            <if test="schoolYear != null  and schoolYear != ''"> and sc.school_year = #{schoolYear}</if>
            <if test="semester != null  and semester != ''"> and sc.semester = #{semester}</if>
            <if test="updateBy != null  and updateBy != ''"> and sc.update_by = #{updateBy}</if>
            <if test="updateTime != null "> and sc.update_time = #{updateTime}</if>
            <if test="remark != null  and remark != ''"> and sc.remark like concat('%', #{remark}, '%')</if>
        </where>
    </select>

    <insert id="insertTScore" parameterType="TScore" useGeneratedKeys="true" keyProperty="scoreId">
        insert into t_score
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
            <if test="examId != null">exam_id,</if>
            <if test="examName != null and examName != ''">exam_name,</if>
            <if test="score != null and score != ''">score,</if>
            <if test="schoolYear != null">school_year,</if>
            <if test="semester != null">semester,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
            <if test="examId != null">#{examId},</if>
            <if test="examName != null and examName != ''">#{examName},</if>
            <if test="score != null and score != ''">#{score},</if>
            <if test="schoolYear != null">#{schoolYear},</if>
            <if test="semester != null">#{semester},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTScore" parameterType="TScore">
        update t_score
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="examId != null">exam_id = #{examId},</if>
            <if test="examName != null and examName != ''">exam_name = #{examName},</if>
            <if test="score != null and score != ''">score = #{score},</if>
            <if test="schoolYear != null">school_year = #{schoolYear},</if>
            <if test="semester != null">semester = #{semester},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where score_id = #{scoreId}
    </update>

    <delete id="deleteTScoreById" parameterType="Long">
        delete from t_score where score_id = #{scoreId}
    </delete>

    <delete id="deleteTScoreByIds" parameterType="String">
        delete from t_score where score_id in 
        <foreach item="scoreId" collection="array" open="(" separator="," close=")">
            #{scoreId}
        </foreach>
    </delete>

</mapper>